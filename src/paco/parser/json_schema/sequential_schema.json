{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "index_in_parent": {
          "type": "integer"
        },
        "type": {
          "type": "string",
          "enum": [
            "Task",
            "Sequential",
            "Parallel",
            "Choice",
            "Nature"
          ]
        }
      },
      "required": [
        "id",
        "type"
      ]
    }
  ]
}