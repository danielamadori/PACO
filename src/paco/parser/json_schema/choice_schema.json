{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "allOf": [
    {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "index_in_parent": {
          "type": "integer"
        },
        "type": {
          "type": "string",
          "enum": [
            "task",
            "sequential",
            "parallel",
            "choice",
            "nature"
          ]
        }
      },
      "required": [
        "id",
        "type"
      ]
    },
    {
      "properties": {
        "label": {
          "type": "string"
        },
        "max_delay": {
          "type": "integer"
        }
      },
      "required": [
        "label",
        "max_delay"
      ]
    }
  ]
}